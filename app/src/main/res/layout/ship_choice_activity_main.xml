<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:columnCount="3"
    android:rowCount="3"
    tools:context=".ShipChoiceActivity">

    <ImageView
        android:id="@+id/playersChoice"
        android:src="@drawable/user"
        android:scaleType="fitCenter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:clickable="false"
        />

    <TextView
        android:id="@+id/space"
        android:scaleType="fitCenter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2"
        android:text="Select Which Vessel You Would Like to Commandeer for This Battle"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <ImageButton
        android:id="@+id/battleship"
        android:scaleType="fitCenter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:src="@drawable/battleship"
        android:padding="5dp"
        android:clickable="true"
        />
    <ImageButton
        android:id="@+id/pirateship"
        android:scaleType="fitCenter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:src="@drawable/pirateship"
        android:padding="5dp"
        android:clickable="true"
        />
    <ImageButton
        android:id="@+id/vikingship"
        android:scaleType="fitCenter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:src="@drawable/vikingship"
        android:padding="5dp"
        android:clickable="true"
        />


    <ImageButton
        android:id="@+id/submarine"
        android:scaleType="fitCenter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:src="@drawable/submarine"
        android:padding="5dp"
        android:clickable="true"
        />
    <ImageButton
        android:id="@+id/spaceship"
        android:scaleType="fitCenter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:src="@drawable/spaceship"
        android:padding="5dp"
        android:clickable="true"
        />
    <ImageButton
        android:id="@+id/ufo"
        android:scaleType="fitCenter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:src="@drawable/ufo"
        android:padding="5dp"
        android:clickable="true"
        />

    <Button
        android:id="@+id/confirmSelectionButton"
        android:text="Confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="1"
        android:layout_columnSpan="3"
        />
    <Button
        android:id="@+id/quitSelectionButton"
        android:text="Quit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="1"
        android:layout_columnSpan="3"
        />

</GridLayout>